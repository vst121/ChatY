@page "/logout"
@inject IJSRuntime JSRuntime

<PageTitle>Logout - ChatY</PageTitle>

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card">
                <div class="card-body text-center">
                    <h4>Logging out...</h4>
                    <div class="spinner-border text-primary mt-3" role="status">
                        <span class="visually-hidden">Loading...</span>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<form method="post" action="/api/logout" style="display: none;">
    <button type="submit" id="logoutButton"></button>
</form>

@code {
    protected override async Task OnAfterRenderAsync(bool firstRender)
    {
        if (firstRender)
        {
            // Trigger the form submission
            await JSRuntime.InvokeVoidAsync("eval", "document.getElementById('logoutButton').click();");
        }
    }
}